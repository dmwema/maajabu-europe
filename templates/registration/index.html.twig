{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}

    <main>

        {% include 'partials/header.html.twig' %}

        {% include 'partials/nav.html.twig' %}

        <section class="ticket-section section-padding">
            <div class="section-overlay"></div>

            <div class="container">
                <div class="row">
                    <div class="col-lg-6 col-10 mx-auto mt-5">
                        {% for message in app.session.flashBag.get('notice-b') %}
                            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                <strong>{{ message }}</strong><br>
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        {% endfor %}
                        {% for message in app.session.flashBag.get('notice') %}
                            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                {{ message }}
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        {% endfor %}
                        <form class="custom-form ticket-form mb-5 mb-lg-0" action="#" method="post" role="form">
                            <h3 class="text-center mb-4">Enrégistrez-vous !</h3>
                            <div class="mb-4">
                                <small>Déjà enrégistré ? <a href="{{ path("app_login") }}">Connectez-vous</a></small>
                            </div>
                            <div class="ticket-form-body">
                                {{ form_start(form) }}
                                    <div class="row">
                                        <div class="col-lg-6 col-md-6 col-12">
                                            {{ form_widget(form.firstname, { 'attr': {'class': 'form-control', 'placeholder': 'Nom'} }) }}
                                        </div>

                                        <div class="col-lg-6 col-md-6 col-12">
                                            {{ form_widget(form.lastname, { 'attr': {'class': 'form-control', 'placeholder': 'Prénom'} }) }}
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-lg-6 col-md-6 col-12">
                                            {{ form_widget(form.email, { 'attr': {'class': 'form-control', 'placeholder': 'Adresse Email'} }) }}
                                        </div>

                                        <div class="col-lg-6 col-md-6 col-12">
                                            {{ form_widget(form.phoneNumber, { 'attr': {'class': 'form-control', 'placeholder': 'Numéro de téléphone'} }) }}
                                        </div>
                                    </div>

                                    {{ form_label(form.birthday, 'Date de naissance', {
                                        'label_attr': {'class': 'col-form-label'}
                                    }) }}
                                    {{ form_widget(form.birthday, { 'attr': {'class': 'form-control', 'placeholder': 'Date de naissance'} }) }}

                                    {{ form_widget(form.address, { 'attr': {'class': 'form-control', 'placeholder': 'Adresse de résidence'} }) }}

                                    {{ form_label(form.bio, 'Parlez brièvement de vous', {
                                        'label_attr': {'class': 'col-form-label'}
                                    }) }}
                                    {{ form_widget(form.bio, { 'attr': {'class': 'form-control', 'placeholder': 'Bio'} }) }}
                                    <hr>

                                    {{ form_widget(form.password, { 'attr': {'class': 'form-control', 'placeholder': 'Créez un mot de passe'} }) }}
                                    {{ form_widget(form.passwordConfirm, { 'attr': {'class': 'form-control', 'placeholder': 'Confirmez le mot de passe'} }) }}

